{
  "name": "midgard-node",
  "version": "1.0.0",
  "description": "A CLI application for submitting/receiving L2 transactions and committing/merging Midgard blocks",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "midgard-node": "./dist/index.js"
  },
  "scripts": {
    "clean": "rimraf dist node_modules",
    "build": "tsup src/index.ts --minify --format esm && tsup src/workers/* --minify --format esm",
    "quick-test": "pnpm run build && node dist/index.js --help",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format-check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "listen": "pnpm run build && node dist/index.js listen",
    "init": "pnpm run build && node dist/index.js init",
    "test": "export NODE_ENV='emulator' && vitest run -- --reporter=basic --disable-console-intercept"
    },
  "keywords": [
    "cardano",
    "layer2",
    "midgard",
    "anastasia-labs"
  ],
  "author": "Anastasia Labs",
  "license": "ISC",
  "dependencies": {
    "@aiken-lang/merkle-patricia-forestry": "^1.3.1",
    "@al-ft/midgard-sdk": "file:../midgard-sdk/al-ft-midgard-sdk-0.1.0.tgz",
    "@effect/experimental": "^0.46.8",
    "@effect/opentelemetry": "^0.44.12",
    "@effect/platform": "^0.80.21",
    "@effect/platform-node": "^0.80.3",
    "@effect/sql": "^0.34.1",
    "@effect/sql-pg": "^0.35.1",
    "@ethereumjs/mpt": "7.0.0-alpha.1",
    "@ethereumjs/util": "^9.1.0",
    "@lucid-evolution/lucid": "0.4.29",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.57.2",
    "@opentelemetry/exporter-trace-otlp-http": "^0.57.2",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/sdk-trace-node": "^1.30.1",
    "@opentelemetry/sdk-trace-web": "^1.30.1",
    "chalk": "^5.6.2",
    "commander": "^13.1.0",
    "dotenv": "^16.6.1",
    "effect": "^3.19.4",
    "level": "^10.0.0",
    "memory-level": "^3.1.0",
    "rimraf": "^6.1.0",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^13.1.0",
    "@effect/vitest": "^0.22.5",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^6.4.1"
  },
  "packageManager": "pnpm@9.15.4+sha512.b2dc20e2fc72b3e18848459b37359a32064663e5627a51e4c74b2c29dd8e8e0491483c3abb40789cfd578bf362fb6ba8261b05f0387d76792ed6e23ea3b1b6a0"
}
