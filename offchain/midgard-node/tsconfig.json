{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "rootDirs": ["./src", "./package.json"],
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
